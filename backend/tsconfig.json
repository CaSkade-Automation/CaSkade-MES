{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "rootDirs": ["./src", "../shared"],
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@shared/*": [ "../shared/dist/*" ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {"path": "../shared"}
    ]
}
